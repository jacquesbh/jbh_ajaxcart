<config>
    <modules>
        <Jbh_AjaxCart>
            <version>0.1.0</version>
            <depends>
                <Mage_Checkout />
            </depends>
        </Jbh_AjaxCart>
    </modules>
    <frontend>
        <layout>
            <updates>
                <jbh_ajaxcart module="Jbh_AjaxCart">
                    <file>jbh_ajaxcart.xml</file>
                </jbh_ajaxcart>
            </updates>
        </layout>
    </frontend>
    <default>
        <jbh_ajaxcart>
            <javascript>
                <include_jquip>1</include_jquip>
            </javascript>
        </jbh_ajaxcart>
    </default>
</config>