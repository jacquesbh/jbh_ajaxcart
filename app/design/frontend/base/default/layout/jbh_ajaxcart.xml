<layout version="0.1.0">

    <default>
        <!--
             Add jQuip only if the configuration is on TRUE
             At this point, you can create your own module which one depends to Jbh_AjaxCart
             and change the default value of the configuration.
        -->
        <reference name="head">
            <action method="addJs" ifconfig="jbh_ajaxcart/javascript/include_jquip"><script>jbh_ajaxcart/jquip.js</script></action>
        </reference>
    </default>

</layout>
